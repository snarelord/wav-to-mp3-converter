{
  "name": "wav-to-mp3",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/electron/main.js",
  "scripts": {
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && electron .",
    "build": "npm run build:react && npm run build:electron",
    "build:react": "vite build",
    "build:electron": "tsc --project src/electron/tsconfig.json",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:mac": "npm run build && electron-builder --mac --arm64",
    "dist:mac-intel": "npm run build && electron-builder --mac --x64",
    "dist:mac-universal": "npm run build && electron-builder --mac --universal",
    "dist:win": "npm run build && electron-builder --win --x64",
    "dist:linux": "npm run build && electron-builder --linux --x64",
    "dist:all": "npm run build && electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@types/archiver": "^7.0.0",
    "@types/ffmpeg-static": "^3.0.3",
    "archiver": "^7.0.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.6.0",
    "vitest": "^3.2.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/electron": "^1.4.38",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "electron": "^37.2.3",
    "electron-builder": "^26.0.12",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  },
  "build": {
    "files": [
      "dist-react/**",
      "dist-electron/**"
    ],
    "extraResources": [
      {
        "from": "node_modules/ffmpeg-static/ffmpeg",
        "to": "ffmpeg"
      }
    ],
    "asarUnpack": [
      "**/ffmpeg-static/**"
    ]
  }
}
